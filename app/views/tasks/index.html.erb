<h1>List of all my tasks</h1>
 <% @tasks.each do |task| %>
  <li><%= task.completed ? "☑️" : "◻" %> <%= link_to task.title, task_path(task) %>
  <%= link_to "🗑", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
 <% end %>
<%= link_to "create task", tasks_new_path %>


